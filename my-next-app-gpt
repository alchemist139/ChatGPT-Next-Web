# nginx 虚拟主机，sites-available/
server {
    listen 80;
    listen 443 ssl;                 # 同时监听80和443端口
    server_name www.tomorrow.ph;         # domain或者ip
    # server_name 38.6.178.107;

    ssl_certificate /etc/letsencrypt/live/www.tomorrow.ph/fullchain.pem; # 替换为你的 SSL 证书路径
    ssl_certificate_key /etc/letsencrypt/live/www.tomorrow.ph/privkey.pem; # 替换为你的 SSL 证书密钥路径

    location / {
        proxy_pass http://localhost:3003; 
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    # 可以添加其他 SSL 相关配置选项，如 SSL 协议、加密算法等
}
